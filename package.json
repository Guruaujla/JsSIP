{
  "name": "voice-sdk-monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r --filter ./packages/* build && pnpm -r --filter ./examples/* build",
    "dev": "pnpm --filter examples/minimal-webapp dev",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier -w \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "e2e": "playwright test",
    "typecheck": "tsc -b",
    "release:dry": "echo 'dry run release'",
    "release": "echo 'release'"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier -w"
    ],
    "**/*.{json,md}": [
      "prettier -w"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "simple-git-hooks": "^2.0.0",
    "tslib": "^2.5.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}